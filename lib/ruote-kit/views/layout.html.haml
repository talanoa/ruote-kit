!!!
%html
  %head

    %title ruote-kit

    %link{ :type => 'image/vnd.microsoft.icon', :href => '/_ruote/images/favicon.ico', :rel => 'icon' }

    %link{ :type => 'text/css', :href => '/stylesheets/_ruote/reset.css', :rel => 'stylesheet' }
    %link{ :type => 'text/css', :href => '/stylesheets/_ruote/rk.css', :rel => 'stylesheet' }

    %script{ :type => 'text/javascript', :src => '/javascripts/_ruote/jquery-1.4.2.min.js' }
    %script{ :type => 'text/javascript', :src => '/javascripts/_ruote/rk.js' }

    - if @_uses_fluo
      %script{ :type => 'text/javascript', :src => '/javascripts/_ruote/ruote-fluo.js' }
      %script{ :type => 'text/javascript', :src => '/javascripts/_ruote/ruote-fluo-editor.js' }
      %link{ :type => 'text/css', :href => '/stylesheets/_ruote/ruote-fluo-editor.css', :rel => 'stylesheet' }
      - #%script{ :type => "text/javascript", :src => "/javascripts/_ruote/fluo-dial.js" }

  %body
    #container

      #header
        #hlogo
          %img{ :src => '/_ruote/images/ruote.png' }
        #htext
          #ruote_kit
            ruote-kit
          #main_navigation
            = alink(:processes, :head, :text => 'processes')
            |
            = alink(:workitems, :head, :text => 'workitems')
            |
            = alink(:errors, :head, :text => 'errors')
            |
            = alink(:schedules, :head, :text => 'schedules')
            |
            = alink(:participants, :text => 'participants')
            ||
            %a{ :href => '/_ruote/processes/new'} launch process
        #hclear

      #main
        = yield

      - unless request.path.match(/\/processes\/new/)
        #as_json
          %a{ :href => as_json, :title => 'same page, but as JSON' }
            as JSON

      #footer
        %div
          &copy; 2009-2010 Kenneth Kalmer
          |
          %a{ :href => 'http://www.opensourcery.co.za' } blog
          |
          %a{ :href => 'http://github.com/tosch/ruote-kit' } source
          |
          %a{ :href => 'http://ruote.rubyforge.org' } powered by ruote

